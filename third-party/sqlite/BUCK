load("//tools/build_defs/oss/osquery:cxx.bzl", "osquery_cxx_library")
load("//tools/build_defs/oss/osquery:native.bzl", "osquery_genrule", "osquery_http_archive")
load("//tools/build_defs/oss/osquery:platforms.bzl", "POSIX", "WINDOWS")

osquery_http_archive(
    name = "archive",
    sha256 = "de5dcab133aa339a4cf9e97c40aa6062570086d6085d8f9ad7bc6ddf8a52096e",
    type = "zip",
    urls = [
        "https://s3.amazonaws.com/osquery-packages/third-party/src/sqlite-amalgamation-3260000.zip",
    ],
)

osquery_genrule(
    name = "sqlite_dir",
    out = "sqlite",
    cmd = (
        "mkdir ${OUT} " +
        "&& ln -sf $(location :archive)/sqlite-amalgamation-3260000 ${OUT}/src"
    ),
    cmd_exe = (
        "mkdir %OUT% " +
        "&& mklink /D %OUT%\src $(location :archive)\sqlite-amalgamation-3260000"
    ),
)

osquery_genrule(
    name = "sqlite3",
    out = "sqlite3.c",
    cmd = "ln -s $(location :archive)/sqlite-amalgamation-3260000/sqlite3.c ${OUT}",
    cmd_exe = "mklink %OUT% $(location :archive)\sqlite-amalgamation-3260000\sqlite3.c",
)

osquery_cxx_library(
    name = "sqlite",
    srcs = [
        ":sqlite3",
    ],
    exported_platform_linker_flags = [
        (
            POSIX,
            [
                "-ldl",
            ],
        ),
    ],
    external = True,
    platform_compiler_flags = [
        (
            POSIX,
            [
                "-Wno-array-bounds",
                "-Wno-error",
                "-Wno-missing-braces",
                "-Wno-overlength-strings",
                "-Wno-parentheses-equality",
                "-Wno-unused-value",
            ],
        ),
        (
            WINDOWS,
            [
                "/EHsc",
            ],
        ),
    ],
    preprocessor_flags = [
        "-DSQLITE_ENABLE_COLUMN_METADATA=1",
        "-DSQLITE_MAX_VARIABLE_NUMBER=250000",
        "-DSQLITE_ENABLE_RTREE=1",
        "-DSQLITE_ENABLE_FTS3=1",
        "-DSQLITE_ENABLE_FTS3_PARENTHESIS=1",
        "-DSQLITE_ENABLE_FTS5=1",
        "-DSQLITE_SECURE_DELETE=1",
        "-DSQLITE_ENABLE_UNLOCK_NOTIFY=1",
        "-DSQLITE_ENABLE_DBSTAT_VTAB=1",
        "-DSQLITE_ENABLE_JSON1=1",
        "-DSQLITE_ENABLE_PREUPDATE_HOOK=1",
        "-DSQLITE_ENABLE_SESSION=1",
        "-DSQLITE_SOUNDEX",
        '-DSQLITE_VERSION="3.26.0"',
    ],
    visibility = ["PUBLIC"],
)
